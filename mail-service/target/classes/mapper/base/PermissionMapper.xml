<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.islet.mapper.base.PermissionMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.islet.model.base.Permission">
        <id column="id" property="id" />
        <result column="parent_id" property="parentId" />
        <result column="parent_name" property="parentName" />
        <result column="name" property="name" />
        <result column="key" property="key" />
        <result column="url" property="url" />
        <result column="description" property="description" />
        <result column="create_time" property="createTime" />
        <result column="modified" property="modified" />
        <result column="removed" property="removed" />
        <result column="user_id" property="userId" />
        <result column="creator" property="creator" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, parent_id, parent_name, name, key, url, description, create_time, modified, removed, user_id, creator
    </sql>

    <select id="getPermissionUrls" resultType="java.lang.String">
        select p.url from base_user u
        left join base_role_user ru on ru.user_id=u.id
        left join base_role r on r.id=ru.role_id
        left join base_permission_role pr on pr.role_id=r.id
        left join base_permission p on p.id=pr.permission_id
        where u.id=#{userId} and u.removed=false
        and r.removed=false and p.removed=false
    </select>

</mapper>
